<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.parking.kani.parking.activity.MyAcountActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#0e74bc"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center|left"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/icon_my_account"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="내 계정"
                    android:textColor="#fff"
                    android:textSize="30dp"
                    android:textStyle="bold"/>

            </LinearLayout>

        </LinearLayout>

        <org.apmem.tools.layouts.FlowLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|left"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Testid122222223dddddd@naver.com"
                android:textColor="#fff"
                android:textSize="18dp"
                android:textStyle="bold"
                android:id="@+id/my_account_user_id"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 님 환영합니다."
                android:textColor="#c9c9c9"
                android:textSize="15dp"/>

        </org.apmem.tools.layouts.FlowLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/my_account_car_kind"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="BMW i8"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:id="@+id/my_account_car_name"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="36가 2915"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:id="@+id/my_account_car_number"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|left"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:paddingLeft="20dp"
                android:text="현재 주차 위치"
                android:textColor="#c9c9c9"
                android:textSize="10dp"
                android:id="@+id/textView"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="서울시 강남구 어쩌구 저쩌구"
                android:textColor="#fff"
                android:textSize="18dp"
                android:textStyle="bold"
                android:id="@+id/my_account_car_position_addr"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="105dp"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:background="@drawable/my_page_car_position"
                android:id="@+id/my_account_car_position_btn"/>

            <ImageButton
                android:layout_width="105dp"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:background="@drawable/navi_menu_logout"
                android:id="@+id/my_account_logout_btn"/>

            <ImageButton
                android:layout_width="105dp"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:background="@drawable/my_page_withdrawal"
                android:id="@+id/my_account_withdrawal_btn"/>

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:padding="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="차량분류"
                    android:textColor="#666"
                    android:textSize="15dp"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:gravity="center_vertical"
                    android:text="승용(소)"
                    android:textColor="#000"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:background="@android:color/transparent"
                    android:id="@+id/car_kind_btn"/>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e9e9e9"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:padding="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="차량종류"
                    android:textColor="#666"
                    android:textSize="15dp"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:gravity="center_vertical"
                    android:text="BMW i8"
                    android:textColor="#000"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:background="@android:color/transparent"
                    android:id="@+id/car_name_btn"/>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e9e9e9"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:padding="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="차량번호"
                    android:textColor="#666"
                    android:textSize="15dp"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:gravity="center_vertical"
                    android:text="36가 2915"
                    android:textColor="#000"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:background="@android:color/transparent"
                    android:id="@+id/car_number_btn"/>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e9e9e9"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:padding="5dp"
                android:orientation="vertical">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:gravity="center_vertical"
                    android:text="비밀번호 변경"
                    android:textColor="#000"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:background="@android:color/transparent"
                    android:id="@+id/pw_change_btn"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>
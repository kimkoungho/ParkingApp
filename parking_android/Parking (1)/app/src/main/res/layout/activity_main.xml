<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_main"
    tools:context="com.parking.kani.parking.activity.MainActivity"
    tools:ignore="missingPrefix">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:paddingTop="48dp"
        android:paddingBottom="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/main_title">
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.8"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginRight="15dp"
                android:id="@+id/my_pos_btn"
                android:background="@drawable/main_menu_current" />

            <Button
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginLeft="15dp"
                android:id="@+id/my_target_btn"
                android:background="@drawable/main_menu_target" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginRight="15dp"
                android:id="@+id/bookmark_btn"
                android:background="@drawable/main_menu_favorite" />

            <Button
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginLeft="15dp"
                android:id="@+id/my_car_btn"
                android:background="@drawable/main_menu_car_position" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:layout_gravity="bottom"
            android:text="â“’2016 DB LAB ALL RIGHTS RESERVED"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textColor="#ffffff"
            app:font="custom1"/>
    </LinearLayout>

</LinearLayout>